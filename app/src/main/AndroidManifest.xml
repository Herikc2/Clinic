<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.carlosmachado.clinic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AddAppointmentActivity"></activity>
        <activity android:name=".activities.AddDoctorActivity"></activity>
        <activity android:name=".activities.AddPatientActivity"></activity>
        <activity android:name=".activities.EditAppointmentActivity"></activity>
        <activity android:name=".activities.EditDoctorActivity"></activity>
        <activity android:name=".activities.EditPatientActivity"></activity>
        <activity android:name=".activities.ListAppointmentActivity"></activity>
        <activity android:name=".activities.ListDoctorActivity"></activity>
        <activity android:name=".activities.ListPatientActivity"></activity>
    </application>

</manifest>